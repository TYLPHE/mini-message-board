extends layout 

block content 
  a(href="/") Go back 
  br
  h1= title

  form(class="flex" action="/new" method="POST")
    div(class="inputs")
      label(for="name") Name:  
        input(
          type="text" 
          id="name" 
          name="messageUser"
        )

      label(for="message") Message:  
        textarea(
          id="message" 
          name="messageText"
          cols="30"
          rows="10"
          required 
        )
    input(type="submit" value="Submit")
